<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/button_reset_xy"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="13sp"
        android:background="#00000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="reset position" />

    <Button
        android:id="@+id/button_onoff_ui"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="13sp"
        android:background="#00000000"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button_reset_xy"
        android:text="ui ON/OFF" />

    <Button
        android:id="@+id/button_onoff_text"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="13sp"
        android:background="#00000000"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button_onoff_ui"
        android:text="text ON/OFF" />
    
</RelativeLayout>
